---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "hover:text-black dark:hover:text-white transition-colors duration-300 ease-in-out",
  )}
  {...rest}
>
  <slot />
</a>
